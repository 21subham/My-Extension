{
  "manifest_version": 3,
  "name": "Media Downloader (Instagram & YouTube)",
  "description": "Download media from Instagram and YouTube.",
  "version": "1.0",
  "permissions": ["tabs", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
